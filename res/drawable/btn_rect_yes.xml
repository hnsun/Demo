<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
		    <solid android:color="#333333" />
		    <padding android:top="@dimen/default_btn_padding" android:bottom="@dimen/default_btn_padding" android:left="@dimen/default_btn_padding" android:right="@dimen/default_btn_padding" />
		    <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
		    <solid android:color="#333333" />
		    <padding android:top="@dimen/default_btn_padding" android:bottom="@dimen/default_btn_padding" android:left="@dimen/default_btn_padding" android:right="@dimen/default_btn_padding" />
		    <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
		    <solid android:color="#333333" />
		    <padding android:top="@dimen/default_btn_padding" android:bottom="@dimen/default_btn_padding" android:left="@dimen/default_btn_padding" android:right="@dimen/default_btn_padding" />
		    <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
		    <solid android:color="@color/defaultTheme" />
		    <padding android:top="@dimen/default_btn_padding" android:bottom="@dimen/default_btn_padding" android:left="@dimen/default_btn_padding" android:right="@dimen/default_btn_padding" />
		    <corners android:radius="10dp" />
        </shape>
    </item>
</selector>